         <Effect::SetMeter>
           <meter>METER_CONSTRUCTION</meter>
           <value>Target.MaxConstruction+3</value>
           <max>1</max>
         </Effect::SetMeter>
       </effects>
     </EffectsGroup>
   </effects>
